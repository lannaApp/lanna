<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#9b6a21"
    android:gravity="center"
    tools:context="com.example.a.lannav1.MainActivity">


    <Button
        android:id="@+id/btchapter1"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="chapter1"
        android:textSize="50sp" />

    <Button
        android:id="@+id/btchapter2"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="chapter2"
        android:textSize="50sp" />

    <Button
        android:id="@+id/btchapter3"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="chapter3"
        android:textSize="50sp" />

    <Button
        android:id="@+id/btchapter4"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="chapter4"
        android:textSize="50sp" />

    <Button
        android:id="@+id/btback"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="back"
        android:textSize="50sp" />


</LinearLayout>
