    <LinearLayout
        style="@style/ex4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/btex4_2"
            style="@style/btex4"
            android:src="@drawable/btex4_9_2" />

        <ImageView
            android:id="@+id/btex4_3"
            style="@style/btex4"
            android:src="@drawable/btex4_9_3" />


        <ImageView
            android:id="@+id/btex4_1"
            style="@style/btex4"
            android:src="@drawable/btex4_9_1" />

        <ImageView
            android:id="@+id/btex4_4"
            style="@style/btex4"
            android:src="@drawable/btex4_9_4" />


    </LinearLayout>





</FrameLayout>