<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ex3_8"
    android:orientation="vertical"
    style="@style/fl">


    <ImageView
        android:id="@+id/btback"
        style="@style/bt_w"
        android:layout_gravity="left|top"
        android:src="@drawable/ic_back" />

    <LinearLayout
        style="@style/ex3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/btex3_3"
            style="@style/btex3"
            android:src="@drawable/btex3_8_3" />

        <ImageView
            android:id="@+id/btex3_2"
            style="@style/btex3"
            android:src="@drawable/btex3_8_2" />


        <ImageView
            android:id="@+id/btex3_1"
            style="@style/btex3"
            android:src="@drawable/btex3_8_1" />

        <ImageView
            android:id="@+id/btex3_4"
            style="@style/btex3"
            android:src="@drawable/btex3_8_4" />


    </LinearLayout>





</FrameLayout>