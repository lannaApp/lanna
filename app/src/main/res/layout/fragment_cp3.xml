<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_cp3"
    android:gravity="center"
    style="@style/fl"
    tools:context="com.example.a.lanna.MainActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/bt_p1"
        android:layout_gravity="center">
        <LinearLayout

            android:id="@+id/num1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="กำกับเสียง       "
                style="@style/tx_size3"/>

            <ImageView
                android:id="@+id/btcp3_1"
                style="@style/bt_cp1"
                android:src="@mipmap/p3_001"
                />

            <ImageView
                android:id="@+id/btcp3_2"
                style="@style/bt_cp1"
                android:src="@mipmap/p3_002"
                />

            <ImageView
                android:id="@+id/btcp3_3"
                style="@style/bt_cp1"
                android:src="@mipmap/p3_003"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/num2"
            android:layout_below="@id/num1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="เป็นสระ            "
                style="@style/tx_size3"/>


            <ImageView
                android:id="@+id/btcp3_4"
                style="@style/bt_cp1"
                android:src="@mipmap/p3_004"
                />
            <ImageView
                android:id="@+id/btcp3_5"
                style="@style/bt_cp1"
                android:src="@mipmap/p3_005"
                />



        </LinearLayout>

        <LinearLayout

            android:id="@+id/num3"
            android:layout_below="@id/num2"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="เป็นสระลดรูป  "
                style="@style/tx_size3"/>


            <ImageView
                android:id="@+id/btcp3_6"
                style="@style/bt_cp1"
                android:src="@mipmap/p3_006"
                />

            <ImageView
                android:id="@+id/btcp3_7"
                style="@style/bt_cp1"
                android:src="@mipmap/p3_007"
                />
            <ImageView
                android:id="@+id/btcp3_8"
                style="@style/bt_cp1"
                android:src="@mipmap/p3_008"
                />

            <ImageView
                android:id="@+id/btcp3_9"
                style="@style/bt_cp1"
                android:src="@mipmap/p3_009"
                />


        </LinearLayout>

    </RelativeLayout>
    <ImageView

        android:id="@+id/bthome"
        style="@style/bt_hnb"
        android:layout_gravity="left|top"
        android:src="@drawable/ic_home"

        />


</FrameLayout>
