<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ex2_7"
    android:orientation="vertical"
    style="@style/fl">


    <ImageView
        android:id="@+id/btback"
        style="@style/bt_w"
        android:layout_gravity="left|top"
        android:src="@drawable/ic_back"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/btsound"
        style="@style/bt2box"
        android:layout_gravity="center"
        android:src="@drawable/btbox" />

    <LinearLayout
        style="@style/ex2"
        android:id="@+id/hidden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/btex2_3"
            style="@style/btex2"
            android:src="@drawable/btex2_43" />

        <ImageView
            android:id="@+id/btex2_2"
            style="@style/btex2"
            android:src="@drawable/btex2_40" />


        <ImageView
            android:id="@+id/btex2_4"
            style="@style/btex2"
            android:src="@drawable/btex2_44" />

        <ImageView
            android:id="@+id/btex2_1"
            style="@style/btex2"
            android:src="@drawable/btex2_23" />


    </LinearLayout>





</FrameLayout>